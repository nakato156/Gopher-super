{
  "concurrency": {
    "parser_workers": 6,
    "similarity_workers": 12,
    "recommendation_workers": 6,
    "buffer_size": 2000
  },
  "sampling": {
    "percentage": 10,
    "random_seed": 42
  },
  "min_common_games": 1,
  "min_similarity_score": 0.005,
  "k": 20,
  "n": 5,
  "weights": {
    "similarity": {
      "common_games": 0.5,
      "playtime": 0.3,
      "reviews": 0.10,
      "preferences": 0.10
    },
    "confidence": {
      "similarity": 0.4,
      "sample": 0.25,
      "playtime": 0.2,
      "recency": 0.1,
      "consensus": 0.05
    }
  }
}
